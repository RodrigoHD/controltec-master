<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@color/primary_dark"
    android:orientation="vertical"
    android:padding="15dp">

    <TextView
        android:id="@+id/textView_titulo_BottomSheet"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="Title"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="@color/letras" />

    <TextView
        android:id="@+id/textView_Detalles_BottomSheet"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:text="Detalles"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:textColor="@color/letras"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView_Detalles_tec"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:text="@string/tec_aviso_text"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:textColor="@android:color/holo_orange_light"
        android:textStyle="bold|italic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="right"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_editarenvio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/editar_datos"
            android:theme="@style/PrimaryFlatButtonWhite" />


        <Button
            android:id="@+id/button_confirmar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/confirmar_text"
            android:theme="@style/PrimaryFlatButtonWhite" />
    </LinearLayout>
</LinearLayout>